<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Исключаем персональные данные из резервного копирования для детской безопасности -->
        <exclude domain="sharedpref" path="billing_prefs"/>
        <exclude domain="database" path="user_data.db"/>
    </cloud-backup>
    <device-transfer>
        <!-- Разрешаем только основные настройки приложения -->
        <include domain="sharedpref" path="app_settings"/>
    </device-transfer>
</data-extraction-rules>

