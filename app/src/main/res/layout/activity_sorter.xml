<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Основной контент -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/child_gradient_blue"
        android:padding="12dp">

        <!-- Информация об уровне и ходах -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="#FFFFFFFF"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:padding="12dp">

                <!-- Кнопка меню слева от Level -->
                <ImageButton
                    android:id="@+id/buttonOpenDrawer"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/menu"
                    android:src="@android:drawable/ic_menu_sort_by_size"
                    android:tint="#455A64"
                    android:layout_marginEnd="8dp" />

                <!-- Колонка Уровень -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/level"
                        tools:text="Уровень"/>
                    <TextView
                        android:id="@+id/textLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="1"
                        android:textStyle="bold"
                        android:textColor="#00838F"
                        android:textSize="18sp"/>
                </LinearLayout>

                <!-- Колонка Секундомер -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/time"
                        tools:text="Время"/>
                    <TextView
                        android:id="@+id/textTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/time_zero_tenth"
                        tools:text="00:00.0"
                        android:textStyle="bold"
                        android:textColor="#455A64"
                        android:textSize="18sp"/>
                </LinearLayout>

                <!-- Колонка Ходы -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/moves"
                        tools:text="Ходы"/>
                    <TextView
                        android:id="@+id/textMoves"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="0"
                        android:textStyle="bold"
                        android:textColor="#2E7D32"
                        android:textSize="18sp"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Игровое поле -->
        <com.timursarsembayev.cubesorter.SorterGameView
            android:id="@+id/sorterGameView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"/>

    </LinearLayout>

    <!-- Левое выдвижное меню с таблицей рекордов -->
    <LinearLayout
        android:id="@+id/leftDrawer"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="12dp">

        <TextView
            android:id="@+id/textRecordsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/records"
            android:textStyle="bold"
            android:textColor="#263238"
            android:textSize="18sp"
            android:paddingBottom="8dp"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TableLayout
                android:id="@+id/recordsTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1,2,3">
                <!-- Будет заполнено программно -->
            </TableLayout>
        </ScrollView>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>
